{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend (ts-node-dev)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "ts-node-dev",
        "--respawn",
        "--transpile-only",
        "src/index.ts"
      ],
      "cwd": "${workspaceFolder}/services/backend",
      "envFile": "${workspaceFolder}/services/backend/.env",
      "console": "integratedTerminal"
    }
  ]
}
